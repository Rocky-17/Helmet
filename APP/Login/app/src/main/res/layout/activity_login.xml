<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">
    <ImageView
        android:id="@+id/Login_imv1"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:src="@drawable/login1"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/login_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安全帽检测"
        android:textSize="25sp"
        android:layout_below="@id/Login_imv1"
        android:layout_marginLeft="125dp"
        android:textColor="#000000"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/login_et_username"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_name"
        android:text=""
        android:hint="账号："
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="textPersonName"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"/>

    <EditText
        android:id="@+id/login_et_psd"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/login_et_username"
        android:text=""
        android:hint="密码："
        android:textSize="18sp"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"/>
    <Button
        android:id="@+id/login_zhuce"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="注册"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/login_et_psd"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_bg"/>
    <Button
        android:id="@+id/login_denglu"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="登录"
        android:textSize="15sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/login_zhuce"
        android:layout_marginLeft="115dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/login_bg"/>

</RelativeLayout>